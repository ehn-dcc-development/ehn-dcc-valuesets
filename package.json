{
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1"
  },
  "config": {
    "defaultSchema": "schemas/DCC.ValueSets.schema.json",
    "schema": "schemas/DCC.ValueSets.combined.schema.json",
    "overrideSchema": {
      "vaccine-encoding-instructions.json": "schemas/vaccine-encoding-instructions.schema.json"
    }
  },
  "scripts": {
    "test": "ls *.json | grep -E -v 'package|valueset' | xargs -I {} ./node_modules/.bin/ajv -c ajv-formats --verbose --spec=draft2020 --strict=false test -s $npm_package_config_schema -d {} --valid"
  }
}
